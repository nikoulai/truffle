{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "..",
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@truffle/codec": [
        "../codec/lib"
      ],
      "@truffle/codec/*": [
        "../codec/lib/*"
      ],
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": "*"
      }
    ],
    "rootDir": "../..",
    "typeRoots": [
      "./typings",
      "../../**/node_modules/@types/bn.js",
      "../../**/node_modules/@types/debug",
      "../../**/node_modules/@types/lodash"
    ]
  },
  "include": [
    "../../decoder/lib/**/*.ts",
    "../../encoder/lib/**/*.ts",
    "../lib/**/*.ts",
    "../typings/**/*.d.ts"
  ]
}
